function open ()
{
	if [[ "$#" -gt 1 ]]; then
	       echo "Usage open <optional-filename>"
	elif [[ "$#" -eq 1 ]]; then
		vim "$(fzf --query $1)";
	else
		vim "$(fzf)";
	fi
}


